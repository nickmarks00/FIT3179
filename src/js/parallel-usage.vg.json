{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Some description",
  "data": {
    "url": "../data/parallel.csv"
  },
  "width": 600,
  "height": 300,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1995,
        "max": 2020,
        "step": 1,
        "name": "Year:   "
      }
    }
  ],
  "transform": [
    { "filter": "datum['Fossil fuel electricity per capita (kWh)']" },
    { "window": [{ "op": "count", "as": "index" }] },
    {
      "fold": [
        "Fossil fuel electricity per capita (kWh)",
        "Nuclear electricity per capita (kWh)",
        "Renewable electricity per capita (kWh)",
        "GDP per capita"
      ]
    },
    {
      "joinaggregate": [
        { "op": "min", "field": "value", "as": "min" },
        { "op": "max", "field": "value", "as": "max" }
      ],
      "groupby": ["key"]
    },
    { "filter": "datum.Year == Year_selection" }
  ],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#ccc" },
      "encoding": {
        "detail": { "aggregate": "count" },
        "x": { "field": "key" }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": { "type": "nominal", "field": "Continent_y" },
        "detail": { "type": "nominal", "field": "index" },
        "opacity": { "value": 0.3 },
        "x": { "type": "nominal", "field": "key" },
        "y": { "type": "quantitative", "field": "norm_val", "axis": null },
        "tooltip": [
          {
            "field": "Entity",
            "type": "nominal"
          },
          {
            "type": "quantitative",
            "field": "GDP per capita"
          },
          {
            "type": "quantitative",
            "field": "Fossil fuel electricity per capita (kWh)"
          },
          {
            "type": "quantitative",
            "field": "Nuclear electricity per capita (kWh)"
          },
          {
            "type": "quantitative",
            "field": "Renewable electricity per capita (kWh)"
          }
        ]
      }
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 0 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "max", "field": "max" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 150 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "min", "field": "mid" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 300 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "min", "field": "min" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": { "stroke": null },
    "style": {
      "label": { "baseline": "middle", "align": "right", "dx": -5 },
      "tick": { "orient": "horizontal" }
    }
  }
}
