{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Some description",
  "data": {
    "name": "Energy",
    "url": "/src/data/parallel.csv"
  },
  "width": "container",
  "height": 400,
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1995,
        "max": 2020,
        "step": 1,
        "name": "Year:   "
      }
    },
    {
      "name": "continent_select",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent (select):  "
      }
    }
  ],
  "transform": [
    { "filter": "datum['4 - GDP']" },
    {
      "filter": "continent_select == null || datum['Continent/region'] == continent_select"
    },
    { "window": [{ "op": "count", "as": "index" }] },
    {
      "fold": ["1 - Fossil Fuels", "3 - Nuclear", "2 - Renewable", "4 - GDP"]
    },
    {
      "joinaggregate": [
        { "op": "min", "field": "value", "as": "min" },
        { "op": "mean", "field": "value", "as": "mid" },
        { "op": "max", "field": "value", "as": "max" }
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
      "as": "norm_val"
    },
    { "filter": "datum.Year == Year_selection" }
  ],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#ccc" },
      "encoding": {
        "detail": { "aggregate": "count" },
        "x": { "field": "key" }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": { "type": "nominal", "field": "Continent/region" },
        "detail": { "type": "nominal", "field": "index" },
        "opacity": { "value": 0.65 },
        "x": { "type": "nominal", "field": "key" },
        "y": { "type": "quantitative", "field": "value", "axis": null },
        "tooltip": [
          {
            "field": "Entity",
            "title": "Country",
            "type": "nominal"
          },
          {
            "type": "quantitative",
            "title": "GDP per capita ($USD)",
            "field": "4 - GDP",
            "format": ".0f"
          },
          {
            "type": "quantitative",
            "title": "Fossil fuel energy usage per capita (kWh)",
            "field": "1 - Fossil Fuels",
            "format": ".0f"
          },
          {
            "type": "quantitative",
            "title": "Renewable fuel energy usage per capita (kWh)",
            "field": "2 - Renewable",
            "format": ".0f"
          },
          {
            "type": "quantitative",
            "title": "Nuclear fuel energy usage per capita (kWh)",
            "field": "3 - Nuclear",
            "format": ".0f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' || datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 0 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "max", "field": "max", "format": ".0f" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 150 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "max", "field": "mid", "format": ".0f" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    },
    {
      "encoding": {
        "x": { "type": "nominal", "field": "key" },
        "y": { "value": 300 }
      },
      "layer": [
        {
          "mark": { "type": "text", "style": "label" },
          "encoding": {
            "text": { "aggregate": "min", "field": "min", "format": ".0f" }
          }
        },
        {
          "mark": {
            "type": "tick",
            "style": "tick",
            "size": 8,
            "color": "#ccc"
          }
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": { "stroke": null },
    "style": {
      "label": { "baseline": "middle", "align": "right", "dx": -5 },
      "tick": { "orient": "horizontal" }
    }
  }
}
