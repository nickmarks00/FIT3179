{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Energy consumption across the globe",
    "frame": "group"
  },
  "projection": { "type": "equalEarth" },
  "data": [
    {
      "url": "../data/per-capita-energy-use.csv",
      "name": "energy_usage",
      "format": { "type": "csv", "delimiter": "," }
    },
    {
      "url": "ne_110m.json",
      "name": "ne_110m",
      "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" },
      "transform": [
        {
          "type": "lookup",
          "from": "energy_usage",
          "fields": ["properties.NAME"],
          "values": ["Energy", "Year"]
        }
      ]
    }
  ],
  "params": [
    {
      "name": "highlight",
      "select": { "type": "point", "on": "mouseover" }
    },
    {
      "name": "select",
      "select": "point"
    },
    {
      "name": "min_energy",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000,
        "step": 5000,
        "name": "Minimum energy consumption:  ",
        "debounce": 2
      }
    }
  ],
  "mark": { "type": "geoshape", "stroke": "white" },
  "encoding": {
    "color": {
      "condition": {
        "test": "datum.Energy > min_energy",
        "field": "Energy",
        "title": "Energy per capita (kWh)",
        "legend": {
          "direction": "horizontal",
          "legendX": 350,
          "legendY": 350,
          "orient": "none"
        },
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1000, 5000, 10000, 25000, 50000, 100000],
          "range": [
            "#ffb6a8",
            "#f29886",
            "#e37a66",
            "#d25b46",
            "#bf3a27",
            "#ab0505"
          ]
        }
      },
      "value": "lightgrey"
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 3
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 2
        }
      ],
      "value": 0.5
    },
    "fillOpacity": {
      "condition": [
        {
          "param": "select",
          "value": 1
        },
        {
          "test": "datum.Energy < min_energy",
          "value": 0.3
        }
      ],
      "value": 0.3
    },
    "tooltip": [
      { "field": "properties.NAME", "type": "nominal", "title": "Country" },
      {
        "field": "Energy",
        "type": "quantitative",
        "title": "Energy per capita (kWh)",
        "format": ",.0f",
        "formatType": "number"
      }
    ]
  }
}
